<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Vidralsa.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Vidralsa"
    xmlns:pages="clr-namespace:Vidralsa.Pages"
    Shell.FlyoutBehavior="Disabled">


    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainMenuPage}"
        Route="MainMenuPage" />

    <ShellContent
        Title="Selector"
        ContentTemplate="{DataTemplate pages:SelectorPage}"
        Route="SelectorPage"/>

    <ShellContent
        Title="Articulo"
        ContentTemplate="{DataTemplate pages:ArticuloPage}"
        Route="ArticuloPage"/>

</Shell>
